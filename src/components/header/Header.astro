---
import style from "./styles.module.scss";
import { Image } from 'astro:assets';
import ProfilePicture from "@assets/image-avatar.jpg";
import ClientHeaderWrapper from "@components/header/ClientHeaderWrapper.astro"
---

<header class={style.header}>
    <a href="/">
        <Image 
            src={ProfilePicture}
            alt="Profile picture link to home page"
            width={40}
            height={40}
            loading="eager"
            priority
        />
    </a>

    <div class={style.headerNavigation}>
        <nav class={style.navBar}>
            <a href="/" class="text-preset-8" data-astro-prefetch>
                Home
            </a>
            <a href="/blog" class="text-preset-8" data-astro-prefetch>
                Blog
            </a>
            <a href="/about" class="text-preset-8" data-astro-prefetch>
                About
            </a>
            <a href="/newsletter" class="text-preset-8" data-astro-prefetch>
                Newsletter
            </a>
        </nav>
        <ClientHeaderWrapper />
    </div>
</header>
